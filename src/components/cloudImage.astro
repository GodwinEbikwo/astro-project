---
interface Props {
  src: string;
  width: string;
  height: string;
  alt: string;
}
---

<div class='container'>
  <div class='heroImg'>
    <img loading='lazy' {...Astro.props} />
  </div>
</div>

<style lang='scss'>
  .container {
    height: 100%;
    max-width: 510px;
    width: 100%;
    background-color: rgba(53, 53, 53, 1);
  }

  .heroImg {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
</style>
